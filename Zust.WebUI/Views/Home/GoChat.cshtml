@model ChatViewModel


<style>
    .chat_left {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
    }

    .chat-right {
        display: flex;
        align-items: flex-start;
        justify-content: flex-end;
        order:2;
    }

        .chat-right .chat-body {
            text-align: left;
        }

    .chat_left .chat-body {
        text-align: right;
    }

    .chat-avatar {
        margin-right: 10px;
    }

    .chat-right .chat-avatar {
        margin-left: 0px;
        margin-right: 10px;
    }

</style>


<div class="content-page-box-area">
    <div class="all-messages-body">
        <div class="all-messages-header d-flex justify-content-between align-items-center">
            <h3>Messages</h3>


        </div>
        <div class="messages-profile-box">
            <a href="#"><img src="~/assets/images/user/user-11.jpg" class="rounded-circle" alt="image"></a>
            <h3><a href="#">@ViewBag.RecieverUsername</a></h3>
        </div>
        <div class="messages-chat-container">
            <div class="chat-content" id="chat-container">
                @foreach (var message in Model.CurrentChat.Messages)
                {
                    <div style="margin-top:5px;">
                        @{
                            var chatClass = message.SenderId == ViewBag.User.Id ? "chat-right" : "chat_left";
                        }
                        <div class="chat @chatClass">
                            <div class="chat-avatar">
                                <a href="/profile" class="d-inline-block">
                                    <img src="~/assets/images/user/user-8.jpg" width="50" height="50" class="rounded-circle" alt="image">
                                </a>
                            </div>

                            <div class="chat-body">
                                <div class="chat-message">
                                    <p>@message.Content</p>
                                    <span class="time d-block">@message.DateTime.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="chat-list-footer">
            <section class="d-flex align-items-center">

                <input type="text" id="message-input" class="form-control" placeholder="Type your message...">

                <a class="send-btn d-inline-block" style="padding:6px 3px; margin-left:2px;border:solid 1px cornflowerblue;background-color:cornflowerblue;border-radius:5px;cursor:pointer;" onclick="SendMessage('@Model.CurrentUserId','@Model.CurrentReceiver')">Send</a>
            </section>
        </div>


    </div>
</div>

<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/jquery.magnific-popup.min.js"></script>
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/simplebar.min.js"></script>
<script src="~/assets/js/metismenu.min.js"></script>
<script src="~/assets/js/owl.carousel.min.js"></script>
<script src="~/assets/js/wow.min.js"></script>
<script src="~/assets/js/main.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
<script src="~/js/chat.js"></script>
<script src="~/js/site.js"></script>

